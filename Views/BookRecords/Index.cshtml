@model IEnumerable<BookRecordApp.Models.BookRecord>

@{
	ViewData["Title"] = "Book Records";
}
<link rel="stylesheet" href="~/css/site.css" />
<body class="Index container py-4">

	<h1 class="mb-4 text-center fs-2">Book Records</h1>

	<p class="text-end">
		<a class="btn btn-primary mb-3 px-4 py-2" asp-action="Create">Add new book</a>
	</p>
	<div class="table-responsive d-none d-md-block">
		<table class="table table-striped table-hover align-middle">
			<thead class="table-dark">
				<tr>
					<th class="fs-6">Nome do livro</th>
					<th class="fs-6">Nome do autor</th>
					<th class="fs-6">Data de inicio</th>
					<th class="fs-6">Data de término</th>
					<th class="fs-6">Contagem</th>
					<th></th>
				</tr>
			</thead>

			<tbody>
				@foreach (var item in Model)
				{
					<tr style="line">
						<td class="fs-6">@item.BookName</td>
						<td class="fs-6">@item.AuthorName</td>
						<td class="fs-6">@item.StartDate.ToShortDateString()</td>
						<td class="fs-6">@item.EndDate.ToShortDateString()</td>
						<td class="fs-6">@item.Count</td>
						<td>
							<a class="btn btn-sm btn-info me-1 mb-1 px-3 py-2" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
							<a class="btn btn-sm btn-secondary me-1 mb-1 px-3 py-2" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
							<a class="btn btn-sm btn-danger mb-1 px-3 py-2" asp-action="Delete" asp-route-id="@item.Id">Deletar</a>
						</td>
					</tr>
				}
			</tbody>
		</table>
	</div>
	<div class="d-md-none">
		@foreach (var item in Model)
		{
			<div class="card mb-3 shadow-sm">
				<div class="card-body">
					<h5 class="card-title">@item.BookName</h5>
					<h6 class="card-subtitle mb-2 text-muted">@item.AuthorName</h6>
					<p class="card-text mb-1">
						<strong>Start:</strong> @item.StartDate.ToShortDateString()<br />
						<strong>Finish:</strong> @item.EndDate.ToShortDateString()<br />
						<strong>Read Count:</strong> @item.Count
					</p>
					<div class="mt-3">
						<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning me-2 mb-2 px-3 py-2">Edit</a>
						<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info me-2 mb-2 px-3 py-2">Details</a>
						<a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mb-2 px-3 py-2">Delete</a>
					</div>
				</div>
			</div>
		}
	</div>
</body>