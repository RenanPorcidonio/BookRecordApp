@model BookRecordApp.Models.BookRecord

@{
	ViewData["Title"] = "Details";
}
<body class="details container mt-4">

	<h1 class="mb-4">Details</h1>

	<div class="card">
		<div class="card-body">
			<h4 class="card-title">@Model.BookName</h4>
			<h6 class="card-subtitle mb-2 text-muted">@Model.AuthorName</h6>

			@* <dl class="list-group list-group-flush mt-3">
				<dt class="col-sm-3">Start Date</dt>
				<dd class="col-sm-9">@Model.StartDate.ToString("dd-MM-yyyy")</dd>

				<dt class="col-sm-3">End Date</dt>
				<dd class="col-sm-9">@Model.EndDate.ToString("dd-MM-yyyy")</dd>

				<dt class="col-sm-3">Times read</dt>
				<dd class="col-sm-9">@Model.Count</dd>
			</dl> *@

			<ul class="list-group list-group-flush mt-3">
				<li class="list-group-item">Início: @Model.StartDate.ToString("dd-MM-yyyy")</li>
				<li class="list-group-item"> Conclusão: @Model.EndDate.ToString("dd-MM-yyyy")</li>
				<li class="list-group-item">Contagem: @Model.Count</li>
			</ul>

			<div class="mt-3 d-grid gap-2">
				<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary w-100">Edit</a>
				<a asp-action="Index" class="btn btn-primary w-100">Back to list</a>
				<a asp-action="Delete" class="btn btn-danger w-100" asp-route-id="@Model.Id">Deletar</a>
			</div>
		</div>
	</div>
</body>