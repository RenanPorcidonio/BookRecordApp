@model BookRecordApp.Models.BookRecord

@{
	ViewData["Title"] = "Deletar";
}
<body class="container mt-4">

	<h1 class="mb-4 text-danger">Deletar</h1>

	<div class="alert alert-warning">
		<h5>Are you sure you want to delete this?</h5>
	</div>

	<div class="card">
		<h4>Book Record</h4>
		<hr />

		@* <dl class="row">
		<dt class="col-sm-2">Book name</dt>
		<dd class="col-sm-10">@Model.BookName</dd>

		<dt class="col-sm-2">Author name</dt>
		<dd class="col-sm-10">@Model.AuthorName</dd>

		<dt class="col-sm-2">Start Date</dt>
		<dd class="col-sm-10">@Model.StartDate</dd>

		<dt class="col-sm-2">End date</dt>
		<dd class="col-sm-10">@Model.EndDate</dd>

		<dt class="col-sm-2">Count</dt>
		<dd class="col-sm-10">@Model.Count</dd>
		</dl> *@

		<div class="card-body">
			<h5 class="card-title">@Model.BookName</h5>
			<h5 class="card-subtitle mb-2 text-muted">@Model.AuthorName</h5>

			<ul class="list-group list-group-flush mt-3">
				<li class="list-group-item">Início: @Model.StartDate.ToString("dd-MM-yyyy")</li>
				<li class="list-group-item">Conclusão: @Model.EndDate.ToString("dd-MM-yyyy")</li>
				<li class="list-group-item">Contagem: @Model.Count</li>
			</ul>
		</div>

		<form asp-action="Delete" method="post" class="mt-3">
			<input type="hidden" asp-for="Id" />
			<div class="d-grid gap-2">
				<button type="submit"class="btn btn-danger w-100">Deletar</button>
				<a asp-action="Index" class="btn btn-secondary w-100">Back to list</a>
			</div>
		</form>
	</div>
</body>
